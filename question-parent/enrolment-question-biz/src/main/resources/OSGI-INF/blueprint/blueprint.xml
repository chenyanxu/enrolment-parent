<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:jpa="http://aries.apache.org/xmlns/jpa/v2.0.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.2.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <jpa:enable/>
    <tx:enable-annotations/>

    <reference id="completionBeanDao" interface="com.kalix.enrolment.question.api.dao.ICompletionBeanDao"/>
    <reference id="choiceBeanDao" interface="com.kalix.enrolment.question.api.dao.IChoiceBeanDao"/>
    <reference id="verseBeanDao" interface="com.kalix.enrolment.question.api.dao.IVerseBeanDao"/>
    <reference id="shiroService" interface="com.kalix.framework.core.api.security.IShiroService"/>

    <!--管理-->
    <bean id="completionBeanServiceImpl" class="com.kalix.enrolment.question.biz.CompletionBeanServiceImpl">
        <property name="dao" ref="completionBeanDao"/>
    </bean>
    <bean id="choiceBeanServiceImpl" class="com.kalix.enrolment.question.biz.ChoiceBeanServiceImpl">
        <property name="dao" ref="choiceBeanDao"/>
    </bean>
    <bean id="verseBeanServiceImpl" class="com.kalix.enrolment.question.biz.VerseBeanServiceImpl">
        <property name="dao" ref="verseBeanDao"/>
    </bean>
    <bean id="repeatedDtoServiceImpl" class="com.kalix.enrolment.question.biz.RepeatedDtoServiceImpl">
        <property name="verseBeanDao" ref="verseBeanDao"/>
        <property name="choiceBeanDao" ref="choiceBeanDao"/>
        <property name="completionBeanDao" ref="completionBeanDao"/>
        <property name="shiroService" ref="shiroService"/>

    </bean>
    <service id="completionBeanService" ref="completionBeanServiceImpl"
             interface="com.kalix.enrolment.question.api.biz.ICompletionBeanService"/>
    <service id="choiceBeanService" ref="choiceBeanServiceImpl"
             interface="com.kalix.enrolment.question.api.biz.IChoiceBeanService"/>
    <service id="verseBeanService" ref="verseBeanServiceImpl"
             interface="com.kalix.enrolment.question.api.biz.IVerseBeanService"/>
    <service id="repeatedDtoService" ref="repeatedDtoServiceImpl"
        interface="com.kalix.enrolment.question.api.biz.IRepeatedBeanService"/>
</blueprint>
