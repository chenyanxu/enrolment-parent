<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:jpa="http://aries.apache.org/xmlns/jpa/v2.0.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.2.0"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <jpa:enable/>
    <tx:enable-annotations/>

    <reference id="completionBeanDao" interface="com.kalix.enrolment.question.api.dao.ICompletionBeanDao"/>
    <reference id="choiceBeanDao" interface="com.kalix.enrolment.question.api.dao.IChoiceBeanDao"/>
    <reference id="verseBeanDao" interface="com.kalix.enrolment.question.api.dao.IVerseBeanDao"/>
    <reference id="musicBeanDao" interface="com.kalix.enrolment.question.api.dao.IMusicBeanDao"/>
    <reference id="subjectBeanDao" interface="com.kalix.enrolment.question.api.dao.ISubjectBeanDao"/>
    <reference id="interviewIssueBeanDao" interface="com.kalix.enrolment.question.api.dao.IInterviewIssueBeanDao"/>
    <reference id="shiroService" interface="com.kalix.framework.core.api.security.IShiroService"/>
    <reference id="roleBeanService" interface="com.kalix.admin.core.api.biz.IRoleBeanService"/>

    <!-- 填空题服务 -->
    <bean id="completionBeanServiceImpl" class="com.kalix.enrolment.question.biz.CompletionBeanServiceImpl">
        <property name="dao" ref="completionBeanDao"/>
    </bean>
    <service id="completionBeanService" ref="completionBeanServiceImpl"
             interface="com.kalix.enrolment.question.api.biz.ICompletionBeanService"/>

    <!-- 选择题服务 -->
    <bean id="choiceBeanServiceImpl" class="com.kalix.enrolment.question.biz.ChoiceBeanServiceImpl">
        <property name="dao" ref="choiceBeanDao"/>
        <property name="roleBeanService" ref="roleBeanService"/>
    </bean>
    <service id="choiceBeanService" ref="choiceBeanServiceImpl"
             interface="com.kalix.enrolment.question.api.biz.IChoiceBeanService"/>

    <!-- 补全诗句服务 -->
    <bean id="verseBeanServiceImpl" class="com.kalix.enrolment.question.biz.VerseBeanServiceImpl">
        <property name="dao" ref="verseBeanDao"/>
    </bean>
    <service id="verseBeanService" ref="verseBeanServiceImpl"
             interface="com.kalix.enrolment.question.api.biz.IVerseBeanService"/>

    <!-- 音乐基础服务 -->
    <bean id="musicBeanServiceImpl" class="com.kalix.enrolment.question.biz.MusicBeanServiceImpl">
        <property name="dao" ref="musicBeanDao"/>
    </bean>
    <service id="musicBeanService" ref="musicBeanServiceImpl"
             interface="com.kalix.enrolment.question.api.biz.IMusicBeanService"/>

    <!-- 主观题服务 -->
    <bean id="subjectBeanServiceImpl" class="com.kalix.enrolment.question.biz.SubjectBeanServiceImpl">
        <property name="dao" ref="subjectBeanDao"/>
    </bean>
    <service id="subjectBeanService" ref="subjectBeanServiceImpl"
             interface="com.kalix.enrolment.question.api.biz.ISubjectBeanService"/>

    <!-- 面试题服务 -->
    <bean id="interviewIssueBeanServiceImpl" class="com.kalix.enrolment.question.biz.InterviewIssueBeanServiceImpl">
        <property name="dao" ref="interviewIssueBeanDao"/>
    </bean>
    <service id="interviewIssueBeanService" ref="interviewIssueBeanServiceImpl"
             interface="com.kalix.enrolment.question.api.biz.IInterviewIssueBeanService"/>

    <!-- 题库排重服务 -->
    <bean id="repeatedDtoServiceImpl" class="com.kalix.enrolment.question.biz.RepeatedDtoServiceImpl">
        <property name="verseBeanDao" ref="verseBeanDao"/>
        <property name="choiceBeanDao" ref="choiceBeanDao"/>
        <property name="completionBeanDao" ref="completionBeanDao"/>
        <property name="shiroService" ref="shiroService"/>
    </bean>
    <service id="repeatedDtoService" ref="repeatedDtoServiceImpl"
        interface="com.kalix.enrolment.question.api.biz.IRepeatedBeanService"/>

    <!-- 预览服务 -->
    <service interface="com.kalix.framework.core.api.biz.IDownloadService"
             ref="choiceBeanServiceImpl">
        <service-properties>
            <entry key="beanName" value="Choice"/>
        </service-properties>
    </service>
    <service interface="com.kalix.framework.core.api.biz.IDownloadService"
             ref="completionBeanServiceImpl">
        <service-properties>
            <entry key="beanName" value="Completion"/>
        </service-properties>
    </service>
    <service interface="com.kalix.framework.core.api.biz.IDownloadService"
             ref="interviewIssueBeanServiceImpl">
        <service-properties>
            <entry key="beanName" value="InterviewIssue"/>
        </service-properties>
    </service>
    <service interface="com.kalix.framework.core.api.biz.IDownloadService"
             ref="musicBeanServiceImpl">
        <service-properties>
            <entry key="beanName" value="Music"/>
        </service-properties>
    </service>
    <service interface="com.kalix.framework.core.api.biz.IDownloadService"
             ref="verseBeanServiceImpl">
        <service-properties>
            <entry key="beanName" value="Verse"/>
        </service-properties>
    </service>
</blueprint>
